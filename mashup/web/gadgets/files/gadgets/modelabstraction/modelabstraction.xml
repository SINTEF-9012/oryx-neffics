<?xml version="1.0" encoding="UTF-8"?>
<Module>
	<ModulePrefs title="Model Abstraction">
		<Require feature="opensocial-0.8"></Require>
        <Require feature="dynamic-height"></Require>
		<Require feature="settitle"></Require>
        <Require feature="rpc"></Require>
		<Require feature="minimessage"></Require>
	</ModulePrefs>
	<Content type="html">
        <![CDATA[
		<script type="text/javascript">
	        var externs = ['http://yui.yahooapis.com/2.7.0/build/yuiloader/yuiloader.js',
						'/oryx/lib/prototype-1.5.1.js',
						'/mashup/gadgets/files/gadgets/modelabstraction/core.js',];
	
	        for (var i = 0; i < externs.length; i++)
	                document.write(unescape("%3Cscript src='" + externs[i] + "'type='text/javascript'%3E%3C/script%3E"));
		</script>
		
		<style type="text/css">
			#abstractor {
				background: transparent;
			}
			
			div.yui-layout-bd {
				background-color: transparent !important;
				border-color: #D0D0D0 !important;
			}
			
			.yui-layout-hd {
				background: #A0A0A0 !important;
				border-style: none !important;
			}
			
			div.yui-layout-hd h2{
				color: #FFFFFF !important;
			}
			
			.checkbox { 
			    display:block;
			   	width:15%;
				float:left;
			    clear:left;
			}
			
			label {
				float:left;
			}
			
			.clear {
			    clear:both;
				height:10px;
			}
			
			#groups {
				list-style: none;
				margin: 15px;
				cursor: pointer;
			}
			
			.group-item {
				background-color: white;
				color: #808080;
				border: 1px #808080 solid;
				-moz-border-radius: 15px; 
				float: left;
				width: 75%;
				height: auto;
				min-height: 20px;
				padding-left: 15px;
				margin-right: 15px;		
			}
			
			div.group-item:hover, .group-item-active {
				background-color: #A0A0A0;
				color: white;
				border-color: white;
			}
			
			#modelline {
				margin-left: 3px;
			}
			
			.hide {
				display: none !important;
			}
		</style>
		
		<body class=" yui-skin-sam" id="abstractor">
					
		<div id ="top">
			<div style = "margin:3px;">
				<fieldset id="button_group"></fieldset>
				<span id="modelline">Model: <span id="model"></span></span>
			</div>
		</div>
		<div id="center"> 
			<ul id="groups"></ul>
		</div>
		</body>
		]]>
	</Content>
</Module>